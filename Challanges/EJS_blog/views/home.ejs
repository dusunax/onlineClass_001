<%- include('partials/header'); -%>

<h1>Home</h1>
<% if(posts.length < 1){ %>
  <p><%= homeStartingContent; %></p>
<% } else { %>

  <!-- forEach -->
  <% posts.forEach((post) => { %>
    <% const postPreview = post.body.substring(0, 100) + " ... " %>

    <h3><%= post.title; %></h3>
    <p>
      <%= postPreview; %>
      <a href="/post/<%= post.title %>">더보기</a>
    </p>
  <% }); %>

<% }; %>

<%- include('partials/footer'); -%>
