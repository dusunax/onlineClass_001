<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/" method="post">
  <div class="form-group">
    <label>제목</label>
    <input class="form-control" type="text" name="newTitle" autocomplete="off" autofocus>
  </div>
  <div class="form-group">
    <label>내용</label>
    <textarea class="form-control" name="newPost" rows="8" cols="80" style="resize:none;"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="page" value=<%= currentPage %>>글쓰기</button>
</form>
<p style="color: blue; font-size: 10px; margin-top: 10px; margin-left: 2px;"><%= userAlerts %></p>

<%- include('partials/footer'); -%>
